@model MusicMy.Models.MusicVideo
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Delete";
}


<!Doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MusicMy - Your favourite music is here</title>
    <link rel="stylesheet" href="~/css/style.css" />
    <style>
        #GFG {
            text-decoration: none;
            color: inherit;
        }
    </style>
</head>
<body>
    <nav>
        <ul>
            <li class="brand">MusicMy</li>
            <li><a id="GFG" asp-action="Browse">Browse</a></li>
            <li><a id="GFG" asp-action="MySaves">My Saves</a></li>
        </ul>
    </nav>

    <div class="container">
        <div class="songList">
            <iframe src="https://www.youtube.com/embed/@(Model.OriginalId)" height="260" width="320" frameborder="0"
                    allow="accelerometer; encrypted-media; gyroscope; picture-in-picture" allowfullscreen>Ooops</iframe>
            <h1>Delete</h1>
            <h3>You'd really do that, huh?</h3>
            <div class="songItem">
                <span>@Html.DisplayNameFor(model => model.Title)</span>
                <span>@Html.DisplayNameFor(model => model.Channel)</span>
                <span>@Html.DisplayNameFor(model => model.Playlist)</span>
                <span>|Delete</span>
            </div>
            <div class="songItem">
                <span><a id="GFG" href="@Model.URL">@Html.DisplayFor(model => model.Title)</a></span>
                <span>@Html.DisplayFor(model => model.Channel)</span>
                <span>@Html.DisplayFor(model => model.Playlist)</span>
                <form class="button" asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</body>
</html>
